<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!-- Name EditText -->
        <EditText
            android:id="@+id/activity_students_form_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/act_std_form_hint_name"
            android:inputType="textCapWords"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAutofill="no"
            />
        <!-- Landline Phone EditText -->
        <EditText
            android:id="@+id/activity_students_form_phone_landline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/act_std_form_hint_phone_landline"
            android:inputType="phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_students_form_name"
            android:importantForAutofill="no"
            />
        <!-- Mobile Phone EditText -->
        <EditText
            android:id="@+id/activity_students_form_phone_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/act_std_form_hint_phone_mobile"
            android:inputType="phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_students_form_phone_landline"
            android:importantForAutofill="no"
            />
        <!-- Email EditText -->
        <EditText
            android:id="@+id/activity_students_form_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/act_std_form_hint_email"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/activity_students_form_phone_mobile"
            android:importantForAutofill="no"
            />
        <!-- Progress Bar LAyout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_students_form_progress_layout"
            style="@style/Theme.Agenda.Layout.ProgressBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <ProgressBar
                android:id="@+id/activity_students_form_progress"
                style="@style/Theme.Agenda.ProgressBar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>